<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/relativeLayout">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contact"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Contact"
            android:layout_below="@+id/nameTextView"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_below="@+id/emailTextView"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. This is sample test. "/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


</RelativeLayout>